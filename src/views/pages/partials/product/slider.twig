{% if products|length %}
<salla-slider block-title="{{ title }}" block-subTitle="{{ sub_title|raw }}"
    display-all-url="{{display_all_url}}" id="{{ type }}-slider" slider-config='{
        "slidesPerView":1,
        "spaceBetween":8,
        "breakpoints": {
            "320": {"slidesPerView":2},
            "480": {"slidesPerView":3},
            "640": {"slidesPerView":4},
            "1024": {"slidesPerView":5},
            "1280": {"slidesPerView":6}
        }
    }'>
    <div slot="items">
        {% for product in products %}
        {% include 'pages.partials.product.card' %}
        {% endfor %}
    </div>
</salla-slider>
{% endif %}