{#
| Variable | Type | Description |
|-------------------|---------|------------------------------------------------------------------|
| component | object | Contains merchant settings for fields from twilight.json `component` section |
| component.title | string | Section title |
| component.partners| Partner[] | list of selected partners |
#}

{% set key = component.key|split('-')[0] %}
<section class="js-categories-component s-block s-block--category container relative" data-key="{{ key }}" data-show-length="{{ component.show_num|json_encode }}">
    <salla-slider pagination auto-play show-controls="false" id="slider-with-bg-{{ position }}"
     slider-config='{
        "centerInsufficientSlides":true,
        "slidesPerView":1,
        "spaceBetween":10,
        "breakpoints": {
            "320": {"slidesPerView":2},
            "480": {"slidesPerView":3},
            "640": {"slidesPerView":4},
            "1024": {"slidesPerView":5},
            "1280": {"slidesPerView":6}
        }
    }'>
        <div slot="items">
            {% for category in component.categories %}
                <div class="s-block--category__item">
                    <a class="js-categories-component-url" href="#" data-id="{{ category.category_item.value[0] }}">
                        <img src="{{ category.image_category }}" alt="{{category.name }}">
                        <div class="absolute w-[85%] pr-3 pl-1.5 py-0.5 bg-white/60 right-0 ltr:left-0 rounded-l-md bottom-8 flex flex-col font-bold text-start">
                            <h4 class="text-primary text-base sm:text-lg truncate">{{ category.name }}</h4>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>