{#
| Variable                       | Type      | Description                                                                  |
|--------------------------------|---------  |------------------------------------------------------------------------------|
| component                      | object    | Contains merchant settings for fields from twilight.json `component` section |
| component.image                | image     | list of banners                                                              |
| component.url                  | url       | offer url                                                              |
#}

{% set title =  component.title %}
{% set words = title|split(' ') %}
{% set last_word = words|last %}
{% set remaining_words = words|slice(0, -1)|join(' ') %}

<section class="s-block bg-white py-8 lg:py-12 section-shadow">
    <div class="container flex flex-col-reverse sm:flex-row sm:justify-around items-center gap-4 lg:gap-6">
        <div class="text-center sm:text-start px-5 relative {{ component.with_bg ? "md:before:content-[''] md:before:absolute before:h-[115%] before:w-[1px] before:bg-primary before:opacity-60 before:right-0 before:-bottom-[5%]": 'xl:px-0' }}">
            <p class="text-2xl lg:text-3xl font-thin text-[#A3A3A3]">{{ component.sub_title }}</p>
            <h1 class="text-3xl {{ component.with_bg ? "lg:text-[46px]": "lg:text-[40px]" }}  font-extrabold pt-4 pb-1 whitespace-nowrap">{{ remaining_words }} <span class="text-primary">{{ last_word }}</span></h1>
            <p class="max-w-[600px] text-lg lg:text-2xl tracking-wider font-thin text-[#A3A3A3] mt-2 lg:mt-4 lg:leading-9">{{ component.desc }}</p>
            <a href="{{ component.url }}" class="shop-now-btn mx-auto sm:mx-0">{{component.url_title|default('تسـوق الآن')}}</a>
        </div>
        
        <div class="relative z-10 
            {{ component.with_bg ? "max-w-[620px] max-h-[540px] md:before:content-[''] before:absolute before:w-[72%] before:h-4/5 before:bg-primary before:z-[-1] before:rounded-[50%] before:top-[10%] before:left-[14%]": "max-w-[530px] max-h-[480px]" }}">
            <img src="{{ component.image }}" alt="banner-image" class="max-w-full max-h-full object-cover mx-auto" />
        </div>
    </div>
</section>