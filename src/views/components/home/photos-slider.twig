{#
| Variable | Type | Description |
|-------------------|---------|------------------------------------------------------------------|
| items | array | List of sliders |
| items[].url | string | |
| items[].link_type | ?String | category,product,offers,page,external_link,brand |
| items[].image.url | string | |
| items[].image.alt | string | |
| position | Int | Sorting number start from zero |
#}
<section class="s-block s-block--photos-slider {{ is_repeated?'repeated-block':'' }} container">
  <salla-slider auto-play show-controls="false" pagination id="photos-{{ position }}-slider">
    <div slot="items">
      {% for item in items %}
      <div class="swiper-slide !mx-0">
        <a href="{{item.url}}">
          <img width="100%" loading="eager" src="{{ item.image.url }}" class="w-full object-cover rounded-md" alt="image_slide">
        </a>
      </div>
      {% endfor %}
    </div>
  </salla-slider>
</section>