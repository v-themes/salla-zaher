{#
| Variable    | Type   | Description                                                      |
| youtube_id  | string |                                                                  |
| position    | Int    | Sorting number start from zero                                   |
#}
<section class="s-block s-block--video relative md:pb-16">
  <div class="container">
    <div class="videoWrapper z-10">
      <lite-youtube videoid="{{ youtube_id }}" params="rel=0"></lite-youtube>
    </div>

    {# Background #}
    <div class="hidden md:block absolute left-0 bottom-0 h-[70%] w-full">
      <div class="h-full relative overflow-hidden">
          <img src="{{ 'images/Youtube-background.png' | asset }}" alt="youtube-background" class="w-full h-full text-[#EFC0B266] absolute top-0 left-0" />
      </div>
    </div>
  </div>
</section>
