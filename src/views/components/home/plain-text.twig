<section class="s-block max-w-[1100px] mx-auto px-2.5 xs:px-4">
    {% if component.title %}
        <h2 class="main-title">{{ component.title }}</h2>
    {% endif %}
    
    <p class="text-base text-slate-800 sm:text-lg px-5 xs:px-8 !leading-10 rounded-md text-justify {{ component.with_border ? "border border-gray-400 py-5 xs:py-8": '' }}">
        {{ component.rich_text }}
    </p>
</section>